@model CreateBookModel
@{
    ViewData["Title"] = "Crear libro";
    var msj = ViewData["Max"] as string;
}
<h1>Crear libro</h1>
<form asp-controller="Home" asp-action="CreateBook" method="post">

    <div class="form-group">
        <label asp-for="Title">Titulo</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year">Año</label>
        <input asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pages"># Paginas</label>
        <input asp-for="Pages" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre">Genero</label>
        <input asp-for="Genre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Author: <select asp-for="AuthorId" asp-items="ViewBag.Authors"></select></label>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <span asp-validation-for="Title" class="text-danger"></span>
    <span asp-validation-for="Year" class="text-danger"></span>
    <span asp-validation-for="Pages" class="text-danger"></span>
    <span asp-validation-for="Genre" class="text-danger"></span>
    @if (!string.IsNullOrEmpty(msj))
    {
        <span class="text-danger">@msj</span>
    }
</form>