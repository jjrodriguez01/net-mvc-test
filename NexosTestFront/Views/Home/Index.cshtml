@model List<BookModel>

@{
    ViewData["Title"] = "WebService Example";
}

<h1>WebService Example</h1>
<p>
    @Html.ActionLink("Create New", "CreateBook")
</p>
<table id="myTable" class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Pages</th>
            <th>Author Name</th>
        </tr>
    </thead>  
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Year</td>
                <td>@book.Genre</td>
                <td>@book.Pages</td>
                <td>@book.AuthorName</td>
            </tr>
        }
    </tbody>
</table>
